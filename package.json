{
  "name": "scanme-backend",
  "version": "1.0.0",
  "description": "Complete backend replica of scanme.org with QR scanning and generation features",
  "main": "scanme-backend.ts",
  "scripts": {
    "dev": "bun --watch index.ts",
    "start": "bun index.ts",
    "build": "bun build index.ts --outdir ./dist --target bun",
    "lint": "eslint . --ext .ts",
    "clean": "rm -rf uploads/* qr-codes/* dist/*"
  },
  "keywords": [
    "qr-code",
    "scanner",
    "generator",
    "typescript",
    "express",
    "mongodb"
  ],
  "author": "Dev Dixit",
  "license": "MIT",
  "dependencies": {
    "@types/dotenv": "^8.2.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "4",
    "jimp": "^0.22.10",
    "jsqr": "^1.4.0",
    "mongoose": "^8.0.3",
    "multer": "1",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "4",
    "@types/multer": "1",
    "@types/node": "^20.10.6",
    "@types/qrcode": "^1.5.5",
    "typescript": "^5.3.3"
  },
  "overrides": {
    "@types/multer": {
      "@types/express": "4.17.21"
    }
  }
}